{
    Event {
        Action = "Comp_Opened",
        Targets = {
            Fusion = {
                Execute = [[
                    comp = fusion.CurrentComp
                    if comp ~= nil then
                        local scriptPath = app:MapPath("Scripts:Prism/ResetPrism.py")
                        if bmd.fileexists(scriptPath) == false then
                            print("[Prism Error] Can't run file: " .. scriptPath)
                        else
                            comp:RunScript(scriptPath)
                        end
                    end
                    ]]
            },
        },
    },
}
